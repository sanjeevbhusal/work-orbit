model Board {
  id             String   @id @default(uuid())
  name           String
  organizationId String
  imageUrl       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  columns        Column[]
}

model Column {
  id      String @id @default(uuid())
  name    String
  Board   Board  @relation(references: [id], fields: [boardId])
  boardId String
  tasks   Task[]
}

model Task {
  id       String @id @default(uuid())
  task     String
  Column   Column @relation(references: [id], fields: [columnId])
  columnId String
  index    Int
}
